<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quizz.MainPage">

    <ScrollView
        BackgroundColor="#382342"
        >
        <VerticalStackLayout
            VerticalOptions="CenterAndExpand"
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#382342">
            
            <Image
                Source="quizwhizlogo.jpg"
                HeightRequest="400"
                Aspect="AspectFit"/>
            
            <Button
                x:Name="CounterBtn"
                Text="Iniciar"
                CornerRadius="50"
                Clicked="OnCounterClicked"
                MaximumWidthRequest="150"
                BackgroundColor="#d05e2e"
                FontSize="Large"
                FontAttributes="Bold"/>
             
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
